<UserControl x:Class="R54IN0.WPF.ProductSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:R54IN0.WPF"
             mc:Ignorable="d" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <WrapPanel Visibility="Collapsed" Orientation="Horizontal" Width="Auto" HorizontalAlignment="Left">
            <WrapPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource MetroButton}">
                    <Setter Property="Margin" Value="3,1" />
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="FontFamily" Value="Segoe UI Light" />
                </Style>
            </WrapPanel.Resources>

            <Button Content="새로운 폴더를 추가하기" Command="{Binding NewFolderAddCommand}" />
            <Button Content="새로운 제품을 추가하기" Command="{Binding NewProductAddCommand}"/>
            <Button Content="삭제하기" Command="{Binding NodeDeleteCommand}" Visibility="Collapsed"/>
        </WrapPanel>

        <local:MultiSelectTreeView x:Name="MultiSelectTreeView" Grid.Row="1"/>
    </Grid>
</UserControl>