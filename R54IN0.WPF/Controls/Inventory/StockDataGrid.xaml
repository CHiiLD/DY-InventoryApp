<UserControl x:Class="R54IN0.WPF.StockDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:R54IN0.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DataGrid x:Name="DataGrid">
        <DataGrid.Columns>
            <DataGridTextColumn x:Name="ProductColumn" Header="제품" Width="Auto"/>
            <DataGridTextColumn Header="규격" Width="Auto"/>
            <DataGridTextColumn Header="설명" Width="30*"/>
            <DataGridTextColumn Header="수량" Width="Auto"/>
            <DataGridTextColumn x:Name="MeasureColumn" Header="단위" Width="Auto"/>
            <DataGridTextColumn x:Name="MakerColumn" Header="제조사" Width="Auto"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
