                    </ResourceDictionary.MergedDictionaries>

                    <Style TargetType="Calendar" BasedOn="{StaticResource MaterialDesignCalendarPortrait}">
                    </Style>
                </ResourceDictionary>
            </Grid.Resources>
            <Calendar SelectionMode="MultipleRange" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="11,-1,11,1">
            </Calendar>
        </Grid>-->
    </StackPanel>
</UserControl>