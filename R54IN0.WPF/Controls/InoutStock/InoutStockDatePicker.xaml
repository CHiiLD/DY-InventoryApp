<UserControl x:Class="R54IN0.WPF.InoutStockDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:R54IN0.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
        <StackPanel>
            <Grid VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="90*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">시작일</Label>
                <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">종료일</Label>
                <DatePicker Grid.Row="0" Grid.Column="1"/>
                <DatePicker Grid.Row="2" Grid.Column="1" />
            </Grid>

            <UniformGrid Height="Auto" Columns="1" Rows="6" Margin="0,10,0,0" >
                <UniformGrid.Resources>
                    <Style BasedOn="{StaticResource MetroButton}" TargetType="Button">
                        <Setter Property="Margin" Value="2" />
                    </Style>
                </UniformGrid.Resources>

                <UniformGrid Columns="3" VerticalAlignment="Center">
                    <Button>오늘</Button>
                    <Button>어제</Button>
                    <Button>그저께</Button>
                </UniformGrid>

                <UniformGrid Columns="3"  VerticalAlignment="Center">
                    <Button>금주</Button>
                    <Button>전주</Button>
                    <Button>전전주</Button>
                </UniformGrid>
                <UniformGrid Columns="3"  VerticalAlignment="Center">
                    <Button>금월</Button>
                    <Button>전월</Button>
                    <Button>전전월</Button>
                </UniformGrid>

                <UniformGrid Columns="4"  VerticalAlignment="Center">
                    <Button>1분기</Button>
                    <Button>2분기</Button>
                    <Button>3분기</Button>
                    <Button>4분기</Button>
                </UniformGrid>

                <UniformGrid Columns="2"  VerticalAlignment="Center">
                    <Button>상반기</Button>
                    <Button>하반기</Button>
                </UniformGrid>

                <UniformGrid Columns="3"  VerticalAlignment="Center">
                    <Button>금년</Button>
                    <Button>작년</Button>
                    <Button>재작년</Button>
                </UniformGrid>
            </UniformGrid>

